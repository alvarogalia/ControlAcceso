<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".IngresoPersona"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top|left"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llPPU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ppuch1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="1"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/colorAccent"
                android:textSize="80sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ppuch2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="1"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textSize="80sp"
                android:textStyle="bold"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/colorAccent"/>

            <EditText
                android:id="@+id/ppuch3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="1"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textSize="80sp"
                android:textStyle="bold"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/colorAccent"/>

            <EditText
                android:id="@+id/ppuch4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="1"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textSize="80sp"
                android:textStyle="bold"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/colorAccent"/>

            <EditText
                android:id="@+id/ppuch5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="1"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textSize="80sp"
                android:textStyle="bold"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/colorAccent"/>

            <EditText
                android:id="@+id/ppuch6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusLeft="@id/txtRut"
                android:nextFocusRight="@id/txtRut"
                android:nextFocusDown="@id/txtRut"
                android:nextFocusForward="@id/txtRut"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textSize="80sp"
                android:textStyle="bold"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblRut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Rut:"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/txtRut"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:nextFocusLeft="@id/txtDV"
                android:nextFocusRight="@id/txtDV"
                android:nextFocusDown="@id/txtDV"
                android:nextFocusForward="@id/txtDV"
                android:selectAllOnFocus="true"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/lblGuion"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/txtDV"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:nextFocusLeft="@id/txtNombre"
                android:nextFocusRight="@id/txtNombre"
                android:nextFocusDown="@id/txtNombre"
                android:nextFocusForward="@id/txtNombre"
                android:selectAllOnFocus="true"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nombre:"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lblDestino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Destino"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="top|left"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:text="No Autorizada" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:text="Autorizada" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>